doctype html
html(lang='en-us')
  head
    block head
      //- metaImage = "https://seewitheyesclosed.com/assets/images/homepage/2.jpg"
      - metaDescription = ''
      block variables
      block meta
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content=metaDescription)
        meta(property="og:title" content=(hardTitle || title + " | Kessler Cascades"))
        meta(property="og:type" content="website")
        meta(property="og:description" content=metaDescription)
        //-meta(property="og:image" content=metaImage)
      block resources
        link(rel="stylesheet" href="/assets/css/global.css")
        script(src="/assets/js/global.js" async)
      block title
        title= hardTitle || title + " | Kessler Cascades"
      link(rel="shortcut icon" type="image/x-icon" href="/assets/images/favicon.ico")
      noscript
        style.
          .--hide-noscript {
            display: none;
          }
  body
    block mixins
      include mixins/verse.pug
    #content
      //-p.no-dropcap: a.sr-only(href="#content__beginning") Skip to Content
      header
        div
          block header
            h1= title || hardTitle
        block navbar
          nav.main-nav(aria-label="Primary")
            a(href="/") Home
            a(href="/proposals/") Proposals
            a(href="/act/") Act
      main
        block content
            p This page does not seem to have any content. Check back later!
    block footer
      footer          
        nav(aria-label="Secondary")
          a(href="https://seewitheyesclosed.com/contact/" target="_blank" rel="noopener") Contact Me
          |  | 
          a(href="https://github.com/benjaminhollon/see-with-eyes-closed" target="_blank" rel="noopener") Code
          |  | 
          a(href="https://seewitheyesclosed.com/projects/" target="_blank" rel="noopener") More Projects
          
        +verse
        
        p.codewithlove
          a(href="https://seewitheyesclosed.com" rel="noopener" target="_blank") &lt;/&gt; with &lt;3 by Benjamin Hollon
